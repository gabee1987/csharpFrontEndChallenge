@{
    ViewData["Title"] = "Current Weather";
}
@model WeatherNET.Models.WeatherForecast.CurrentlyWeatherData

<div class="text-center">
    <h1 class="display-4">Weather Forecast</h1>
</div>
<form method="get" action="/Weather/GetCurrentWeather">
    <input type="text" name="locationName" placeholder="Enter location name..." required>
    <button type="submit">Get Forecast</button>
</form>

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h2>Current Weather for {Location}</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Temperature:</strong> @Model.Temperature °</p>
                    <p><strong>Feels Like:</strong> @Model.ApparentTemperature °</p>
                    <p><strong>Humidity:</strong> @Model.Humidity %</p>
                    <p><strong>Wind Speed:</strong> @Model.WindSpeed km/h</p>
                </div>
                <div class="col-md-6">
                    <p><strong>UV Index:</strong> @Model.UvIndex</p>
                    <p><strong>Visibility:</strong> @Model.Visibility km</p>
                    <p><strong>Pressure:</strong> @Model.Pressure hPa</p>
                    <p><strong>Ozone:</strong> @Model.Ozone DU</p>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <p><strong>Weather Summary:</strong> @Model.Summary</p>
        </div>
    </div>

